<Window x:Class="Kindergarten_wpf_.View.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kindergarten_wpf_.View"
        mc:Ignorable="d"
        Title="Авторизация"  Height="300" Width="300" FontSize="18" FontFamily="Trebuchet MS" ResizeMode="NoResize" ShowInTaskbar="False" >
    <Grid>
        <DockPanel >
        <StackPanel Margin="20">
            <TextBlock Text="Имя пользователя" Margin="5"/>
            <TextBox x:Name="tbLogin"  Margin="5" />
            <TextBlock Text="Пароль"  Margin="5"/>
            <PasswordBox x:Name="tbPassword"  Margin="5"  />
            <Button Content="Вход" x:Name="btnOk"  Margin="5" IsDefault="True" MaxWidth="120"  MinWidth="100" HorizontalAlignment="Stretch" />
            <Button Content="Выход"  Margin="5"  HorizontalAlignment="Stretch" MaxWidth="120"  MinWidth="100" IsCancel="True"/>
        </StackPanel>
        
        
      
       
       
    </DockPanel>
    </Grid>

</Window>
